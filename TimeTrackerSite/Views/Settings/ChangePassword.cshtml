@using TimeTrackerSite.Resources
@model TimeTrackerSite.Models.User

@{
    ViewBag.Title = Settings.settingsChangePassword;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Login.changePasswordTitle</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    @using (Html.BeginForm("ChangePassword", "Settings", FormMethod.Post, new { enctype = "multipart/form-data", @class = "mt-5" }))
    {
        @Html.AntiForgeryToken()
        <div class="container jumbotron">
            <div class="row justify-content-center">
                <div class="col-sm-3"></div>
                <div class="col-sm-3">
                    <h4 class="text-center">@Login.changePasswordTitle</h4>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "form-text" })
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "form-text" })
                        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <input type="submit" value="@Login.btnChangePassword" class="btn btn-outline-primary btn-block" />
                    </div>
                </div>
                <div class="col-sm-3"></div>
            </div>
        </div>
    }
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/popper")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
